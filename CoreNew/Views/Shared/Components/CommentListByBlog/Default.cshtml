@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
    }
    else
            {
                <h4>Henüz Yorum Yapılmadı. İlk Yorumu Siz Yapın.</h4>
            }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <p>
                    @item.CommentContent
                </p>


            </div>
        </div>
    }
</div>